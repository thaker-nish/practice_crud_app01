<h1>Edit a puppy!</h1>

<%= form_tag "/puppies/#{@puppy.id}", method: :patch do%>
<div class="form-group">
  <%= label_tag :name, 'Enter name: '%>
  <%= text_field_tag :name, @puppy.name, class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :gender, 'Enter gender: ' %>
  <%= text_field_tag :gender,@puppy.gender, class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :birthdate, 'Enter birthdate: ' %>
  <%= text_field_tag :birthdate,@puppy.birthdate, class:"form-control" %>
</div>
<div>
  <%= submit_tag 'Submit puppy!', class:"btn btn-primary" %>
</div>
<%end%>