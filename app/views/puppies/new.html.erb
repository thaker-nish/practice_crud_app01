<h1>Add new puppy! </h1>

<%= form_tag '/puppies', method: :post do%>
<div class="form-group">
  <%= label_tag :name, 'Enter name: '%>
  <%= text_field_tag :name,'', class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :gender, 'Enter gender: ' %>
  <%= text_field_tag :gender,'', class:"form-control" %>
</div>
<div class="form-group">
  <%= label_tag :birthdate, 'Enter birthdate: ' %>
  <%= text_field_tag :birthdate,'', class:"form-control" %>
</div>
<div>
  <%= submit_tag 'Submit puppy!', class:"btn btn-primary" %>
</div>
<%end%>